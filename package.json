{
  "name": "changesets-changelog-github-compact-monorepo",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --dir packages/changesets-changelog-github-compact dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test --workspace-concurrency=1",
    "lint": "eslint --ignore-path .gitignore '**/*.{js,ts}'",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --ignore-path .gitignore '**/*.{js,ts}' --check",
    "format:fix": "pnpm run format --write",
    "fixup": "run-s lint:fix format:fix",
    "release": "pnpm run build && pnpm changeset publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tsm": "^2.2.2",
    "tsup": "^6.2.3",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@7.11.0",
  "engines": {
    "pnpm": "^7.11.0",
    "yarn": "forbidden, use pnpm",
    "npm": "forbidden, use pnpm",
    "node": "^14.13.1 || ^16.0.0 || >=18"
  },
  "pnpm": {
    "overrides": {
      "@svitejs/changesets-changelog-github-compact": "workspace:*"
    }
  }
}
